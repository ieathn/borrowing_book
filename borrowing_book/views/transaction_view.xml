<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- LIST VIEW -->
    <record id="view_library_transaction_list" model="ir.ui.view">
        <field name="name">library.transaction.list</field>
        <field name="model">library.transaction</field>
        <field name="arch" type="xml">
            <list string="Transactions" decoration-danger="is_overdue">
                <field name="name"/>
                <field name="member_id"/>
                <field name="book_id"/>
                <field name="book_copy_id"/>
                <field name="borrow_date"/>
                <field name="expected_return_date"/>
                <field name="return_date"/>
                <field name="status"/>
                <field name="late_days"/>
                <field name="fine_amount"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_library_transaction_form" model="ir.ui.view">
        <field name="name">library.transaction.form</field>
        <field name="model">library.transaction</field>
        <field name="arch" type="xml">
            <form string="Transaction">

                <header>
                    <!-- Mark as Borrowed -->
                    <button name="action_mark_borrowed"
                            string="Mark as Borrowed"
                            type="object">
                        <modifier name="invisible">
                            [["status", "=", "borrowed"]]
                        </modifier>
                    </button>

                    <!-- Mark as Late -->
                    <button name="action_mark_late"
                            string="Mark as Late"
                            type="object">
                        <modifier name="invisible">
                            [["status", "!=", "borrowed"]]
                        </modifier>
                    </button>

                    <!-- Mark as Returned -->
                    <button name="action_mark_returned"
                            string="Mark as Returned"
                            type="object">
                        <modifier name="invisible">
                            [["status", "=", "returned"]]
                        </modifier>
                    </button>

                    <field name="status" widget="statusbar"
                           statusbar_visible="borrowed,late,returned"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="member_id"/>
                            <field name="book_copy_id"/>

                            <field name="book_id" readonly="1"/>
                        </group>

                        <group>
                            <field name="borrow_date"/>
                            <field name="expected_return_date"/>
                            <field name="return_date"/>
                            <field name="is_overdue" readonly="1"/>
                            <field name="late_days" readonly="1"/>
                            <field name="fine_amount" readonly="1"/>
                            <field name="fine_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_library_transaction" model="ir.actions.act_window">
        <field name="name">Transactions</field>
        <field name="res_model">library.transaction</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
