<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_library_member_list" model="ir.ui.view">
        <field name="name">library.member.list</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <list string="Members">
                <field name="name"/>
                <field name="student_code"/>
                <field name="class_name"/>
                <field name="faculty"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="transaction_count"/>
            </list>
        </field>
    </record>

    <record id="view_library_member_form" model="ir.ui.view">
        <field name="name">library.member.form</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form string="Member">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="name"/>
                            <field name="student_code"/>
                            <field name="class_name"/>
                            <field name="faculty"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="address"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Transactions">
                            <field name="transaction_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="book_id"/>
                                    <field name="book_copy_id"/>
                                    <field name="borrow_date"/>
                                    <field name="expected_return_date"/>
                                    <field name="return_date"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_library_member" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
